<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>    
    <link href="~/Content/materialize/css/materialize.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />       
</head>
<body>
    
    <nav class="indigo darken-4">
        <header class="nav-wrapper container">
            <a href="/" class="brand-logo">Who wants to be a millionaire?</a>
            <ul class="right">
                @if (Session["Name"] != null)
                {
                    <li>@Html.ActionLink("Quit", "Logout", "Home")</li>
                }
            </ul>
        </header>
    </nav>    
    <div class="container">
        @RenderBody()
    </div>    
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/materialize/materialize.min.js"></script>   
</body>
</html>